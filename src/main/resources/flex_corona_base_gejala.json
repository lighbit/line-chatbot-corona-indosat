{
	"type": "bubble",
	"hero": {
		"type": "image",
		"url": "%1$s",
		"size": "full",
		"aspectRatio": "1:1",
		"aspectMode": "cover",
		"action": {
			"type": "uri",
			"uri": "http://linecorp.com/"
		}
	},
	"body": {
		"type": "box",
		"layout": "vertical",
		"contents": [
			{
				"type": "text",
				"text": "%2$s",
				"weight": "bold",
				"size": "xl"
			},
			{
				"type": "text",
				"text": "%3$s"
			}
		]
	},
	"footer": {
		"type": "box",
		"layout": "horizontal",
		"spacing": "sm",
		"contents": [
			{
				"type": "button",
				"action": {
					"type": "postback",
					"label": "YA",
					"data": "%4$s"
				},
				"style": "primary"
			},
			{
				"type": "button",
				"action": {
					"type": "postback",
					"label": "TIDAK",
					"data": "%5$s"
				},
				"style": "secondary"
			},
			{
				"type": "spacer"
			}
		],
		"flex": 0
	}
}